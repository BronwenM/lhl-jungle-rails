<section class="admin-catgories-index">

  <header class="page-header">
    <h1>Admin &raquo; All Categories</h1>
  </header>

  <div class="well">
    <%= link_to '+ New Category', [:new, :admin, :category], class: 'btn btn-info' %>
  </div>

  <div class="panel panel-default products">

    <table class="table table-bordered">
      <thead>
        <tr>
          <th>Category</th>
          <th># Units</th>
        </tr>
      </thead>
      <tbody>
        <%= render @categories %>
      </tbody>
      <tfoot>
        <tr>
          <th>TOTAL: </th>
          <th><%= @categories.reduce(0) { |sum, category| sum + category.products.length} %></th>
        </tr>
      </tfoot>
    </table>

  </div>

</section>